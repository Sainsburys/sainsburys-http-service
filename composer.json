{
    "name": "sainsburys/sainsburys-http-service",

    "version": "1.0.2",

    "license": "MIT",

    "require": {

        "php": ">=5.5.0",

        "slim/slim":                           "^3.0.0-RC3",
        "container-interop/container-interop": "~1.1.0",
        "psr/http-message":                    "1.0.0",
        "psr/log":                             "1.0.0",
        "shrikeh/teapot":                      "^1.0",
        "samburns/pimple3-containerinterop":   "^1.0",
        "samburns/config-file-parser":         "^1.0",
        "zendframework/zend-diactoros":        "^1.0"
    },

    "require-dev": {
        "pimple/pimple":                     "^3.0",
        "phpunit/phpunit":                   ">=4.8.0 <5.1.0",
        "phpspec/phpspec":                   "~2.4.0",
        "behat/behat":                       "dev-master#2059cbe4bb8055c8555fa3365c6ea3b4b30288f5",
        "henrikbjorn/phpspec-code-coverage": ">=1.0 <3.0",
        "guzzlehttp/guzzle":                 "^6.1.0",
        "satooshi/php-coveralls":            "~0.1.0"
    },

    "autoload": {
        "psr-0": {
            "Sainsburys\\HttpService\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-0": {
            "Sainsburys\\HttpService\\Dev\\":  "src-dev/sample-application/src/",
            "Sainsburys\\HttpService\\Test\\": "tests/behat/context_files/"
        }
    }
}
