{
    "name": "ents/http-mvc-service",

    "version": "0.1.0",

    "license": "proprietary",

    "require": {

        "php": ">=5.5.0 <7.0.0",

        "pimple/pimple":                       "~3.0.1",
        "psr/http-message":                    "1.0.0",
        "slim/slim":                           "3.0.0-RC2",
        "zendframework/zend-diactoros":        "1.1.4",
        "shrikeh/teapot":                      "1.0.2",
        "container-interop/container-interop": "1.1.0"
    },

    "require-dev": {
        "phpunit/phpunit":                   "~4.8.18",
        "phpspec/phpspec":                   "2.4.0-rc1",
        "behat/behat":                       "dev-master#2059cbe4bb8055c8555fa3365c6ea3b4b30288f5",
        "henrikbjorn/phpspec-code-coverage": "^1.0.1",
        "guzzlehttp/guzzle":                 "6.1.0"
    },

    "autoload": {
        "psr-0": {
            "Ents\\HttpMvcService\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-0": {
            "Ents\\HttpMvcService\\Dev\\": "src-dev/sample-application/src/"
        },
        "psr-4": {
            "Ents\\HttpMvcService\\Test\\": "tests/behat/context_files/"
        }
    }
